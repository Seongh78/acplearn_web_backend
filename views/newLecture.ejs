<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
    <link rel="stylesheet" type="text/css" href="/semantic/semantic.css">
    <script src="https://code.jquery.com/jquery-3.1.1.min.js"
      integrity="sha256-hVVnYaiADRTO2PzUGmuLJr8BLUSjGIZsDYGmIJLv2b8="
      crossorigin="anonymous"></script>
    <script src="/semantic/semantic.js"></script>

  </head>

<style media="screen">
    html, body{
        width: 100%;
        height:100%;
        background-color: #f8f8f8;
    }
    hr{
        opacity: 0.5;
    }

    #app{
        /*background: #f8f8f8;*/
        height: 100%;
        /*height: auto;*/
    }
    .centerLayout{
        width: 100%;
        max-width: 1200px !important;
        margin:0 auto !important;
    }

    #navi{
        background: #4374D9;
        color:#fff;
        /*display: inline-block;*/
        padding: 10px 40px;
        /*overflow: auto;*/
    }
        #navi > h1{
            float: left;
            margin-top:15px;
        }
        #navi > p{
            float: right;
            right:0;
            margin-top:27px;
        }

    #sideNavi{
        background: #fff;
        border-right: 1px solid #dfdfdf;
        padding:0;
        height: 100%;
        border-radius: 0;
        border-right: 1px solid #dfdfdf;
        clear: both;
    }
        #sideNavi > .item{
            padding:25px;
        }

    #sideNavi, #content{
        height: 100%;
        margin: 0;
    }
    #content{
        padding:25px;
    }

    .cardbox{
        background: #fff;
        margin:10px;
        padding:10px;
        box-shadow: 1px 2px 3px 1px rgba(0, 0, 0, 0.08);
    }
</style>

  <body>


    <div id="app" class="ui grid">


        <%- include('modules/navi') %>

        <div id="content" class="sixteen wide column centerLayout">


            <div class="ui ordered steps" style="width:100%;">
            <%
            var selectFlag='completed';
            var step = [
                { title: '강의개요', sub: 'Summary' },
                { title: 'APL기간', sub: 'APL term' },
                { title: '시간표', sub: 'Timetable' },
                { title: '수강생', sub: 'Students' },
                { title: '팀빌딩', sub: 'Team building' },
                { title: '설문', sub: 'Survey' },
            ];

            step.forEach(function(st){
            selectFlag = (st.sub == selector) ? 'active' : (st.sub!=selector && selectFlag!='completed')?'':'completed';
            %>
              <div class="<%=selectFlag%> step" onclick="move('/lectures/new/<%=st.sub%>')" style="cursor:pointer;">
                <div class="content">
                  <div class="title"><%=st.title%></div>
                  <div class="description"><%=st.sub%></div>
                </div>
              </div>
            <% }); %>



            </div>



            <div class="cardbox" style="margin:10px 0; padding:25px; ">
                <h2>강의개요 <small><button id="loadTemplate" class="ui button">템플릿으로 불러오기</button></small></h2>

            </div>


            <div class="cardbox" style="margin:0; padding:25px;">

                <table class="ui form centerLayout">
                    <colgroup>
                        <col width="10%">
                        <col width="60%">
                    </colgroup>
                    <tr>
                        <th>강의제목</th>
                        <td><input type="text" placeholder="제목을 입력해 주세요" style="width:85%;"></td>
                    </tr>
                    <tr>
                        <th>강의목적</th>
                        <td><textarea style="width:85%;" rows="6" placeholder="내용을 입력해 주세요"></textarea></td>
                    </tr>
                    <tr>
                        <th>내용</th>
                        <td><textarea style="width:85%;" rows="6" placeholder="내용을 입력해 주세요"></textarea></td>
                    </tr>
                    <tr>
                        <th>기대효과</th>
                        <td><textarea style="width:85%;" rows="6" placeholder="내용을 입력해 주세요"></textarea></td>
                    </tr>

                    <tr>
                        <th>계획서/자료</th>
                        <td>
                            <input type="file" placeholder="제목을 입력해 주세요" style="width:85%;">
                            <button type="button" class="ui primary button" style="width:10%; height:42.5px;">추가</button>
                        </td>
                    </tr>
                </table>


            </div>

            <div class="cardbox" style="margin:10px 0; padding:25px; text-align:center;">
                <button class="ui button">템플릿으로 저장</button>
                <button class="ui button">저장</button>
                <button class="ui primary button">다음페이지</button>
            </div>
        </div>
        <!-- content -->




    </div>




<!-- 모달 -->
<div class="ui modal">
    <i class="close icon"></i>
    <div class="header">강의 템플릿</div>
    <div class="content">
        <%- include('./modules/searchForm')%>
        <table class="ui celled table">
            <colgroup>
                <col width="5%">
                <col width="80%">
            </colgroup>
              <thead>
                <tr>
                  <th></th>
                  <th>강의명</th>
                  <th>내용</th>
                </tr>
              </thead>
              <tbody>
                <tr>
                  <td><input type="checkbox" name="" value=""></td>
                  <td>Approved</td>
                  <td>
                      <button class="ui button">상세보기</button>
                  </td>
                </tr>
              </tbody>
        </table>
    </div>
    <div class="actions">
        <div class="ui black deny button">닫기</div>
        <div class="ui positive right labeled icon button">
            적용하기<i class="checkmark icon"></i>
        </div>
    </div>
</div>






<script type="text/javascript">

    $(document).ready(function() {

    });

    function move(ur) {
        document.location.href=ur;
    }



    $(document).on('click', '#loadTemplate', function() {
        $('.ui.modal').modal({duration:100}).modal('show');
    })

</script>



  </body>
</html>
