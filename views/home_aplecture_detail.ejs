    <script type="text/javascript">
        $('.menu .item').tab();

        $(document).ready(function() {
                $('.tooltip').popup();
        });
        $(document).ready(function () {
            $('.dropdown').dropdown({maxSelections: 3});
            $('.tooltip').popup();
        });

        function move(ur) {
            document.location.href=ur;
        }




// Vue
    // dummyDataBinding = new Vue({
        new Vue({
        	el: '#vapp',
        	data: {
        		lecture: {},
                thisTab:'f01',
        		errors: []
        	},

        	// Fetches lecture when the component is created.
        	created: function () {
        		axios.get('/api/aplectures/1')
                .then(function(response){
                    console.log(response.data.data);
        			this.lecture = response.data.data
        		}
                .bind(this))
        		.catch(function(e) {
        			this.errors.push(e)
        		});
        		// console.log(this.lecture)
        	},
        	computed: {
        		reverse: function() {
        			return this.lecture.reverse();
        		},

        		orderedUsers: function () {
        			return _.orderBy(this.lecture, 'first_name')
        		}
        	},
        	methods: {
                cc: function() {
                    alert(1);
                },
                selectTab: function(s) {
                    console.log('this tab: ', this.thisTab);
                    console.log('sel tab: ', s);
                    this.thisTab=s;
                },
                application: function functionName() {
                    // alert('수강신청되었습니다.');
                    location.href="/aplectures/application/"+this.lecture.rec_idx;
                }
        	}
        });




    </script>



